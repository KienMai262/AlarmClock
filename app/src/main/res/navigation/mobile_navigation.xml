<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.alarmclock.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_createEditFragment"
            app:destination="@id/navigation_create" />
    </fragment>

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.example.alarmclock.ui.create.CreateFragment"
        tools:layout="@layout/fragment_create">
        <argument
            android:name="alarmIndexToEdit"
            app:argType="integer" android:defaultValue="-1" /> </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.alarmclock.ui.notifications.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.alarmclock.ui.setting.SettingFragment"
        tools:layout="@layout/fragment_setting" />

    <fragment
        android:id="@+id/navigation_setting_alarm"
        android:name="com.example.alarmclock.ui.setting.AlarmsSettingFragment"
        tools:layout="@layout/fragment_setting_alarm" />

    <fragment
        android:id="@+id/navigation_setting_data"
        android:name="com.example.alarmclock.ui.setting.SettingDataFragment"
        tools:layout="@layout/fragment_setting_data" />

    <fragment
        android:id="@+id/navigation_share_data"
        android:name="com.example.alarmclock.ui.share.DataShareFragment"
        tools:layout="@layout/fragment_share_data" />
</navigation>