<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.share.DataShareFragment"> <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:contentDescription="@string/back"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        app:tint="?attr/android:textColorTertiary" />
    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_data"
        android:textColor="?attr/android:textColorTertiary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_back_arrow"
        android:layout_marginStart="0dp"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RelativeLayout
            android:id="@+id/layout_share_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:padding="16dp"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_share_data_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_data"
                    android:textColor="?attr/android:textColorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_share_data_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_data_with_others"  android:textColor="?attr/android:textColorSecondary"  android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_format_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/format"
            android:textColor="?attr/android:textColorPrimary"  android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:id="@+id/layout_format_selection"  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_format_value_display"  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CSV"  android:textColor="?attr/android:textColorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:tint="?attr/android:textColorSecondary"
                android:contentDescription="@string/format"/>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_copy_to_clipboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/copy_to_clipboard"
        app:backgroundTint="?attr/android:textColorTertiary"
        android:textColor="?attr/colorOnPrimary"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="@dimen/bottom_nav_height"/>
</LinearLayout>